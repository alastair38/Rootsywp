@import '_settings'

normalize-css()
base()

a
  text-decoration: none
  &:hover, &:focus
    text-decoration: underline
  &.active
    text-decoration: underline

body
  font-size: 1.5em
  padding: 6em 50px

h1
  text-transform: capitalize

h2
  text-align: center
  text-decoration: underline

nav
  box-shadow: 0px 1px 0px 0px #fafafa
  position: fixed
  right: 50px
  left: 50px
  top: 0
  background: rgba(255,255,255,.95)
  padding: 2em
  margin-bottom: 1em
  text-align: center
  a
    padding: 10px 10px 10px 0
    color: black

ul
  display: flex
  margin-left: 0
  padding-left: 0

#code
  font-family: monospace

#latest, #extras
  font-size: 2em
  li
    text-align: center
    border: 1px solid silver
    a
      &:visited
        color: inherit
        outline: 1px dotted

#latest li
  background: teal

#extras li
  background: aqua

li
  flex: 1
  list-style-type: none
  margin: 1em
  padding: .5em
  background: white
