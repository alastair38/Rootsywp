extends layout

block content

    ul#latest
      each post in records.posts
        li
          a(href='post/#{post.slug}') #{post.title.rendered}
       
    ul#latest      
      each post in records.pages
        if (post.title.rendered == "Events" || post.title.rendered == "People")
          li
            a(href='/#{post.slug}') #{post.title.rendered}
